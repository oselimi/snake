<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="w-full h-full flex flex-col-reveresed">
	  <img src="https://images.unsplash.com/photo-1540569876033-6e5d046a1d77?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" alt="background" class="object-cover object-center min-h-screen w-7/12">
	<div class="bg-white flex flex-col justify-center items-center w-5/12 shadow-lg">
  <%= render "devise/shared/error_messages", resource: resource %>
		<h1 class="text-3xl font-bold text-blue-500 mb-2">Forgot your password?</h1>
		<div class="w-1/2 text-center">
      <%= f.email_field :email, placeholder:"email", class:"shadow-md border w-full h-10 px-3 py-2 text-orange-500 focus:outline-none focus:border-orange-500 mb-3 rounded" %>
      <%= f.submit "Send me reset password instructions", class:"bg-orange-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-lg focus:outline-none shadow" %>
    </div>
	</div>
</div>
<% end %>

<%= render "devise/shared/links" %>
