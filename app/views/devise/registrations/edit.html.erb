<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="w-full h-full flex flex-col-reveresed">
    <div class="bg-white flex flex-col justify-center items-center w-5/12 shadow-lg">
  <%= render "devise/shared/error_messages", resource: resource %>
      <h1 class="text-3xl font-bold text-blue-500 mb-2">Profile </h1>
      <div class="w-1/2 text-center">
        <%= f.text_field :name, class:"shadow-md border w-full h-10 px-3 py-2 text-orange-500 focus:outline-none focus:border-orange-500 mb-3 rounded" %>
        <%= f.email_field :email, placeholder:"email", class:"shadow-md border w-full h-10 px-3 py-2 text-orange-500 focus:outline-none focus:border-orange-500 mb-3 rounded" %>
        <%= f.password_field :password,placeholder:"password", class:"shadow-md border w-full h-10 px-3 py-2 text-orange-500 focus:outline-none focus:border-orange-500 mb-3 rounded" %>
        <%= f.password_field :password_confirmation, placeholder:"password confirmation", class:"shadow-md border w-full h-10 px-3 py-2 text-orange-500 focus:outline-none focus:border-orange-500 mb-3 rounded" %>
        <%= f.password_field :password_current, placeholder:"password current", class:"shadow-md border w-full h-10 px-3 py-2 text-orange-500 focus:outline-none focus:border-orange-500 mb-3 rounded" %>
        <%= f.submit "Update", class:"bg-orange-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-lg focus:outline-none shadow" %>
        <%= button_to "Back", :back, class:"bg-blue-600 hover:bg-orange-500  text-white px-3 py-1 rounded text-lg focus:outline-none shadow" %>
      </div>
    </div>
      <img src="https://images.unsplash.com/photo-1540569876033-6e5d046a1d77?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" alt="background" class="object-cover object-center min-h-screen w-7/12">
  </div>
  <% end %>
